<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.TrainingDairy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/orange</item>
        <item name="colorControlHighlight">@color/orange</item>

        <item name="colorOutline">@color/white</item>
    </style>

    <!-- Стиль NoActionBar наследует стиль AppTheme -->
    <style name="Theme.TrainingDairy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TrainingDairy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TrainingDairy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolBarInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/tool_bar_input_layout</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextColor">@color/orange</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>

</resources>